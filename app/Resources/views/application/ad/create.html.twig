{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/ad.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block content %}
    <div class="container">
        <h3>Post Your Ad</h3>
        <div id="simpleform">
            {{ form_start(form, { 'attr': {'class': 'ui form'} }) }}
            {#{{ form_widget(form) }}#}
            <div class="ui form">
                <div class="field">
                    {{ form_row(form.id) }}
                </div>
                <div class="field">
                    {{ form_row(form.title) }}
                </div>
                <div class="field">
                    {{ form_row(form.description) }}
                </div>
                <div class="two fields">
                    <div class="field">
                        {{ form_row(form.subCategory) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.location) }}
                    </div>
                </div>
                <div class="fields">
                    <div class="three wide field">
                        {{ form_row(form.frequencyType) }}
                    </div>
                    <div class="two wide field">
                        {{ form_row(form.rentFrequency) }}
                    </div>
                    <div class="three wide field">
                        {{ form_row(form.cost) }}
                    </div>
                    <div class="four wide field">
                        {{ form_row(form.contactNumber) }}
                    </div>
                </div>
                <div class="fields">
                    {% for photo in form.photos %}
                        <div class="image-upload field">
                            <label for="file-input">
                                {% if photo.url.vars.data is null %}
                                    <img id="img{{ loop.index }}" style="width: 200px; height:200px;" src="{{ asset('images/ads/no_image.png') }}"/>
                                {% else %}
                                    <img id="img{{ loop.index }}" style="width: 200px; height:200px;" src="{{ asset('images/ads/'~photo.url.vars.data) }}"/>
                                {% endif %}
                            </label>
                            {{ form_row(photo) }}
                        </div>
                    {% endfor %}
                </div>
                {{ form_row(form.Next) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/ads/ad.js') }}" type="text/javascript"></script>

{% endblock %}
