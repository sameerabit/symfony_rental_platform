{% form_theme form _self %}

{% block form_errors %}
    {% spaceless %}
        {% if errors is defined %}
            {% if errors|length > 0 %}
                <ul style="list-style-type: none;">
                    {% for error in errors %}
                        <li style="color:red;">{{ error.message }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}